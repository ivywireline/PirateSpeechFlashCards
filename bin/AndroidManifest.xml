<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ivywire.piratespeechflashcards"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name=".contentprovider.MyCardContentProvider"
            android:authorities="com.ivywire.piratespeechflashcards.contentprovider" >
        </provider>

        <activity
            android:name="com.ivywire.piratespeechflashcards.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ivywire.piratespeechflashcards.InstructionsActivity"
            android:label="@string/title_activity_instructions" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ivywire.piratespeechflashcards.MediumActivity"
            android:label="@string/title_activity_medium" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ivywire.piratespeechflashcards.StartingActivity"
            android:label="@string/title_activity_starting" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ivywire.piratespeechflashcards.DifficultActivity"
            android:label="@string/title_activity_difficult" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ivywire.piratespeechflashcards.BeginnerActivity"
            android:label="@string/title_activity_beginner" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ivywire.piratespeechflashcards.ComplexActivity"
            android:label="@string/title_activity_complex" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ivywire.piratespeechflashcards.NaughtyActivity"
            android:label="@string/title_activity_naughty" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ivywire.piratespeechflashcards.ShareActivity"
            android:label="@string/title_activity_share" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ivywire.piratespeechflashcards.ManageActivity"
            android:label="@string/title_activity_manage" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ivywire.piratespeechflashcards.CardLoadActivity"
            android:label="@string/title_activity_card_load" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>