<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp"
    android:background="@drawable/card_medium"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1_medium"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dp"
        android:src="@drawable/sword1" />

    <ImageView
        android:id="@+id/imageView2_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1_medium"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="178dp"
        android:layout_marginRight="23dp"
        android:src="@drawable/olseadog1" />

    <RatingBar
        android:id="@+id/ratingBar1_naughty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2_medium"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:clickable="false"
        android:progress="100" />

    <Button
        android:id="@+id/button1_medium"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ratingBar1_naughty"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Submit rating!"
        android:textSize="35sp" />

</RelativeLayout>