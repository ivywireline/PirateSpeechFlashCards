<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="@drawable/card_instructions" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:text="There are two ways to hear how the language is spoken.  In Walt Disney’s movie, “Treasure Island”  produced in 1950 is where Long John Silver’s dialect sets the standard."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:text="&apos;After viewing this video, click the back button to return here.&apos;"
        android:textSize="20sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/youtube"
        android:layout_width="400dp"
        android:layout_height="270dp"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="62dp"
        android:layout_toLeftOf="@+id/textView2"
        android:autoLink="web"
        android:src="@drawable/monkeypirate_youtube"
        android:text="http://www.youtube.com/watch?v=fqMu6e5Dgtg" />

</RelativeLayout>
