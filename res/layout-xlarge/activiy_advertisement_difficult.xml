<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:background="@drawable/card_beginner"
    android:orientation="vertical" >
    
        <ImageView
            android:id="@+id/imageView1_difficult"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/monkeypirate" />

    <RatingBar
        android:id="@+id/ratingBar1_difficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1_difficult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:clickable="false"
        android:progress="100" />

    <ImageView
        android:id="@+id/imageView2_difficult"
        android:layout_width="400dp"
        android:layout_height="800dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/olcapn" />

    <Button
        android:id="@+id/button1_difficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="Submit rating!"
        android:textSize="50sp" />

</RelativeLayout>
