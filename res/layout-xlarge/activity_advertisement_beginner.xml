<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	    <ImageView
	        android:id="@+id/imageView2_beginner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView1_beginner"
	        android:layout_alignParentRight="true"
	        android:layout_marginBottom="37dp"
	        android:src="@drawable/spyglass1" />

	    <RatingBar
	        android:id="@+id/ratingBar1_beginner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ratingButton1_beginner"
	        android:layout_marginLeft="53dp"
	        android:layout_marginTop="87dp"
	        android:layout_toRightOf="@+id/imageView1_beginner"
	        android:clickable="false"
	        android:progress="100" />

	    <Button
	        android:id="@+id/ratingButton1_beginner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/ratingBar1_beginner"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="28dp"
	        android:layout_marginTop="105dp"
	        android:text="Submit rating!"
	        android:textSize="24sp" />

	    <ImageView
	        android:id="@+id/imageView1_beginner"
	        android:layout_width="200dp"
	        android:layout_height="180dp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/parrotnaughty" />

</RelativeLayout>
    
    

