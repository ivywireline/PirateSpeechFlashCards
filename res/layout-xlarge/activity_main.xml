<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/button1_asd"
        android:layout_below="@+id/button1_asd"
        android:layout_marginTop="40dp"
        android:background="#85c4ff"
        android:text="Starting"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/button2"
        android:background="#BCA9F5"
        android:text="Difficult"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="40dp"
        android:background="#fdff8b"
        android:text="Beginner"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignLeft="@+id/button4"
        android:background="#F5A9F2"
        android:text="Complex"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/button5"
        android:layout_below="@+id/button5"
        android:layout_marginTop="40dp"
        android:background="#FA5858"
        android:text="Naughty"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignLeft="@+id/button6"
        android:background="#F5D0A9"
        android:text="Share"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@drawable/card_shape"
        android:padding="10dp"
        android:password="false"
        android:singleLine="false"
        android:text="@string/menu_info"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/button3"
        android:layout_marginLeft="105dp"
        android:layout_toRightOf="@+id/button1_asd"
        android:background="#c2e5c0"
        android:text="Medium"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button1_asd"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="45dp"
        android:background="#BDBDBD"
        android:text="Instructions"
        android:textSize="50sp" />

</RelativeLayout>
