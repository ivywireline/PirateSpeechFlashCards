<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="@drawable/card_medium"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1_medium"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dp"
        android:src="@drawable/sword1" />

    <ImageView
        android:id="@+id/imageView2_medium"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView1_medium"
        android:src="@drawable/olseadog1" />

    <Button
        android:id="@+id/button1_medium"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/imageView2_medium"
        android:layout_centerHorizontal="true"
        android:text="Submit rating!"
        android:textSize="18sp" />

</RelativeLayout>