<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="@drawable/card_difficult" >

    <ImageView
        android:id="@+id/imageView1_difficult"
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/monkeypirate" />

    <ImageView
        android:id="@+id/imageView2_difficult"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="38dp"
        android:src="@drawable/olcapn" />

    <Button
        android:id="@+id/button1_difficult"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/imageView2_difficult"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="Submit rating!"
        android:textSize="18sp" />

</RelativeLayout>