<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    tools:context=".ManageActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/parrotnaughty" />

    <TextView
        android:id="@+id/manage_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="We understand for a portion of our users some of our content make them uncomfortable. That&apos;s why we offer the option for you to edit our settings to disable the naughty cards section."
        android:textSize="12sp" />

    <Button
        android:id="@+id/remove_naughty_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manage_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Disable all naughty cards"
        android:textSize="15sp" />
    
    <Button
        android:id="@+id/naughty_password_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/remove_naughty_button"
        android:layout_alignRight="@+id/remove_naughty_button"
        android:layout_below="@+id/remove_naughty_button"
        android:layout_marginTop="5dp"
        android:text="Change admin password"
        android:textSize="15sp" />

</RelativeLayout>