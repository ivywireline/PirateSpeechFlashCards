<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="@drawable/card_beginner" >

	    <ImageView
	        android:id="@+id/imageView1_difficult"
	        android:layout_width="200dp"
	        android:layout_height="180dp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="2dp"
	        android:src="@drawable/parrotnaughty" />

	    <ImageView
	        android:id="@+id/imageView2_difficult"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView1_difficult"
	        android:layout_alignParentRight="true"
	        android:layout_marginBottom="37dp"
	        android:src="@drawable/spyglass1" />

	    <RatingBar
	        android:id="@+id/ratingBar1_difficult"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/imageView2_difficult"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="14dp" />

	    <Button
	        android:id="@+id/ratingButton1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/ratingBar1_difficult"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="18dp"
	        android:text="Submit rating!"
	        android:textSize="24sp" />

</RelativeLayout>